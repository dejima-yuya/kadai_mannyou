<h1>ユーザー一覧</h1>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>タスク数</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to 'ユーザーの詳細', admin_user_path(user.id) %></td>
      <td><%= link_to 'ユーザーを編集する', edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'ユーザーを削除する', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>    
      <td><%= link_to '管理者権限解除', deprive_admin_admin_user_path(user.id), method: :patch, data: { confirm: '本当に管理者権限を解除していいですか？' } %></td>
      <td><%= link_to '管理者権限付与', grant_admin_admin_user_path(user.id), method: :patch, data: { confirm: '本当に管理者権限を付与していいですか？' } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'ユーザーを作成', new_admin_user_path %>
<%= link_to 'プロフィール画面', user_path(current_user.id) %>