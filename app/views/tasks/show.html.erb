<h1>タスク詳細</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>ラベル</th>
  </tr>

  <tr>
    <td><%= @task.title %></td>
    <td><%= @task.content %></td>
    <td><%= @task.end_date %></td>
    <td><%= @task.status %></td>
    <td><%= @task.priority %></td>
    <td>
      <% @task.labels.each do |label| %>
        <%= label.title %>
      <% end %>
    </td>
  </tr>
</table>

<br>

<%= link_to 'タスク一覧画面', tasks_path %>
